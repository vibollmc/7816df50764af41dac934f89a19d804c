        </center>
    </div>
    <div class="col-xs-12 hidden-xs hidden-md hidden-lg text-center center-block">
        <center>
            <!--banner 468x60-->
            <script data-cfasync='false' type='text/javascript' src='//p329323.clksite.com/adServe/banners?tid=329323_684364_0'></script>
        </center>
    </div>
    <div class="col-xs-12 hidden-xs hidden-sm">
        <center>
            <!--banner 728x90-->
            <script data-cfasync='false' type='text/javascript' src='//p329323.clksite.com/adServe/banners?tid=329323_684364_2'></script>
        </center>
    </div>
</div>

@if (Model != null)
{
    <div class="row">
        @foreach (var match in Model.Matches)
        {
            <div class="col-md-4 col-sm-6 col-xs-12 match">
                <div class="center-block text-center">
                    <a href="/match/@match.Slug" title="@match.Title">
                        <img class="img-thumbnail img-responsive" alt="@match.Title" title="@match.Title" src="@match.ImageUrl" />
                    </a>
                </div>
                <div class="center-block text-center item-title-block">
                    <div class="text-left title">
                        <h4>
                            <a href="/match/@match.Slug" title="@match.Title">@match.Title</a>
                        </h4>
                        <label class="label label-info"><span class="glyphicon glyphicon-time"></span> @string.Format("{0:MMM dd, yyyy}", match.MatchDate)</label>
                    </div>
                </div>
            </div>
        }
    </div>
}
@if (Model != null && Model.TotalPage > 1)
{
    <ul class="pagination">
        @if (Model.CurrentPage == 1)
        {
            <li class="page-item disabled"><a class="page-link">Previous</a></li>
        }
        else
        {
            <li class="page-item"><a class="page-link" href="@(Model.PageUrl + "/page-" + (Model.CurrentPage - 1).ToString())">Previous</a></li>
        }

        @foreach (var p in Model.PagingGenerate)
        {
            if (p == "...")
            {
                <li class="page-item disabled"><a class="page-link">...</a></li>
            }
            else if (p == Model.CurrentPage.ToString())
            {
                <li class="page-item active"><a class="page-link">@string.Format("{0:#,###}", Convert.ToInt32(p))</a></li>
            }
            else
            {
                <li class="page-item"><a class="page-link" href="@(Model.PageUrl + "/page-" + p)">@string.Format("{0:#,###}", Convert.ToInt32(p))</a></li>
            }

        }

        @if (Model.CurrentPage == Model.TotalPage)
        {
            <li class="page-item disabled"><a class="page-link">Next</a></li>
        }
        else
        {
            <li class="page-item"><a class="page-link" href="@(Model.PageUrl + "/page-" + (Model.CurrentPage + 1).ToString())">Next</a></li>
        }
    </ul>
}

