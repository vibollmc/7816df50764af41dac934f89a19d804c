@model IEnumerable<Football.Show.Entities.Category>

<footer>
    <div class="row">
        <div class="col-xs-12 text-center">
            <h3>Watch Highlights and Full Matches on <a href="/" title="football-highlights.tv">football-highlights.tv</a></h3>
        </div>
        <div class="col-xs-12">
            <h3>All Leagues</h3>
            <div class="row">
                @foreach (var cat in Model)
                {
                    <div class="col-md-3 col-sm-4 col-xs-6">
                        <p><a href="/league/@cat.Slug" title="@cat.Name">@cat.Name</a></p>
                    </div>
                }
            </div>
        </div>
    </div>

</footer>
