@page "{type}.xml"
@model Football.Show.Pages.XmlModel
@{
    Layout = null;
    Response.ContentType = "text/xml";
}
<?xml version="1.0" encoding="UTF-8" ?>
@*<?xml -stylesheet href="http://football-highlights.tv/xml.xsl" type="text/xsl" ?>*@
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9" xmlns:xhtml="http://www.w3.org/1999/xhtml" xmlns:image="http://www.google.com/schemas/sitemap-image/1.1" xmlns:video="http://www.google.com/schemas/sitemap-video/1.1">
    @if (Model.Links != null && Model.Links.Any())
    {
        foreach (var link in Model.Links)
        {
            <url>
                <loc>@link.Loc</loc>
                <priority>@link.Priority</priority>
                <lastmod>@link.LastMod.ToString("s")+00:00</lastmod>
                <changefreq>@link.ChangeFreq</changefreq>
            </url>
        }
    }
</urlset>